	<bean id="mental_arith_1" class="stone.javatasks.executables.MentalArithmetic">
		<property name="stimuliFile" value="ma_block1_2.csv" />
		<property name="block" value="1" />
	</bean>
	
	<bean id="mental_arith_2" class="stone.javatasks.executables.MentalArithmetic">
		<property name="stimuliFile" value="ma_block2_2.csv" />
